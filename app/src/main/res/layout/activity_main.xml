<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/errorShowSnackBarBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Error Snack Bar"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/successShowSnackBarBtn"
        app:layout_constraintStart_toStartOf="@+id/successShowSnackBarBtn"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/successShowSnackBarBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="8dp"
        android:text="Success Snack Bar"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/errorShowSnackBarBtn" />

</android.support.constraint.ConstraintLayout>